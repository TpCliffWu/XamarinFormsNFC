<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="XamarinFormsNFC.Views.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="{Binding Title}">

    <StackLayout
        Margin="30,0"
        HorizontalOptions="FillAndExpand"
        VerticalOptions="CenterAndExpand">
        <Editor
            HeightRequest="200"
            HorizontalOptions="FillAndExpand"
            Text="{Binding NfcContent}" />
        <Button Command="{Binding ReadCommand}" Text="Read Tag" />
        <Button Command="{Binding WritingCommand}" Text="Writing Tag" />
        <Button Command="{Binding SetCommand}" Text="Set Emulator Card Content">
            <Button.IsVisible>
                <OnPlatform
                    x:TypeArguments="x:Boolean"
                    Android="true"
                    iOS="false" />
            </Button.IsVisible>
        </Button>
    </StackLayout>

</ContentPage>